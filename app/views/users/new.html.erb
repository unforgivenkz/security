<% provide(:title, "Регистрация") %>
<% provide(:h1, "Регистрация") %>
<% provide(:img, "reg.jpg") %>
 <div class = "signup">
    <%= form_for(@user) do |f| %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name%>

      <%= f.label :email, "Логин" %>
      <%= f.text_field :email, value: login()%>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Создать мой аккаунт" %>
    <% end %>
  </div>