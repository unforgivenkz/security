



<li id="<%= feed_item.id %>">
	<%= link_to image_tag(feed_item.user.avatar.thumb.url), feed_item.user if feed_item.user.avatar? %>
	<%= link_to image_tag(img_title("personalmini.png")), feed_item.user if !feed_item.user.avatar?%>
    <%= link_to feed_item.user.name, feed_item.user %>

    
  <span class="contentmic"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
                            

  | <%= link_to "Просмотреть",feed_item %>
  <% if current_user?(feed_item.user) %>
  | <%= link_to "Удалить", feed_item, method: :delete,
                                     data: { confirm: "Вы уверены?" },
                                     title: feed_item.content %>
  <% end %>
</li>


